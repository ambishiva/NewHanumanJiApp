<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    >

    <RelativeLayout
        android:background="@color/coloryellow"
        android:visibility="visible"
        android:id="@+id/linearLayoutHeader"
         android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/menutextcolor"
            android:id="@+id/textViewDone"
            android:layout_centerInParent="true"
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <customlayout.CustomTextViewRegular
            android:textSize="25dp"

            android:layout_centerInParent="true"
            android:textColor="@color/menutextcolor"
            android:text="Alarm Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="invisible"
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/imageViewSetReminder"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@android:drawable/checkbox_on_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <EditText
        android:textStyle="bold"
        android:background="@color/white"
        android:layout_marginTop="@dimen/medium_brush"
        android:id="@+id/editTextTitle"
        android:textColorHint="@color/menutextcolor"
        android:padding="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_below="@id/linearLayoutHeader"
        android:gravity="center"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>