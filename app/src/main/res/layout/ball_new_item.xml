<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout

        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/relativeLayoutFirstPearl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        >

    <ImageView

        android:visibility="visible"
        android:src="@mipmap/bead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewFirstPearl" />

    <ImageView
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/imageViewFirstPearl"
        android:src="@mipmap/bead_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewSecondPearl" />

    <ImageView

        android:layout_below="@+id/imageViewSecondPearl"
        android:src="@mipmap/bead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewThirdPearl" />

</LinearLayout>


    <LinearLayout

        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/relativeLayoutSecondPearl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        >

        <ImageView

            android:visibility="visible"
            android:src="@mipmap/bead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewFirstPearl1" />

        <ImageView
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/imageViewFirstPearl1"
            android:src="@mipmap/bead_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewSecondPearl1" />

        <ImageView

            android:layout_below="@+id/imageViewSecondPearl1"
            android:src="@mipmap/bead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewThirdPearl1" />

    </LinearLayout>


</RelativeLayout>
