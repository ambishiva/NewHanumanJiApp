<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    >

    <RelativeLayout
        android:background="@color/coloryellow"
        android:id="@+id/linearLayoutHeader"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewBack"
            android:src="@mipmap/back"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <customlayout.CustomTextViewRegular
            android:layout_centerInParent="true"
            android:textColor="@color/menutextcolor"
            android:textSize="25dp"
            android:text="hello hanuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView

            android:visibility="invisible"
            android:id="@+id/imageViewInformation"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="@mipmap/setingsbg"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/linearLayoutHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout

            android:id="@+id/lienarLayoutAboutUs"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"

                android:text="About Us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/linearLayoutTermsOfUse"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"
                android:text="Terms of Use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/linearLayoutContactUs"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"
                android:text="Contact Us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/linearLayoutShare"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"
                android:text="Share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/linearLayoutPrivacyPolicy"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"
                android:text="Privacy Policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relativeLayoutHelp"
            android:layout_margin="@dimen/small_brush"
            android:background="@color/menucolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/menutextcolor"
                android:gravity="center|left"
                android:text="Help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/arrow_forward"
                android:layout_width="@dimen/fifteen_brush"
                android:layout_height="@dimen/fifteen_brush" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>