<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    >

    <RelativeLayout
        android:padding="5dp"
        android:background="@color/coloryellow"
        android:id="@+id/linearLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewBell"
            android:layout_centerInParent="true"
            android:src="@mipmap/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <customlayout.CustomTextViewRegular
            android:textSize="25dp"
            android:gravity="center"
           android:layout_centerInParent="true"
            android:textColor="@color/menutextcolor"
            android:text="hello hanuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:id="@+id/imageViewInformation"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/linearLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayoutAudioVideoMain"
        android:layout_margin="@dimen/medium_brush"

        android:background="@mipmap/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:id="@+id/relativeLayoutReadAbout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:textStyle="bold"
                android:textColor="@color/black_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_brush"
                android:text="Audio and Videos of Hanuman Ji"
                android:id="@+id/textViewAudioVideo"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="@dimen/large_brush"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:padding="@dimen/fifteen_brush"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/large_brush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audio_video_of_hanuman_ji"
                android:id="@+id/textViewDescriptionAudio"
                android:layout_below="@+id/textViewAudioVideo"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutReadAboutHanumanJi"
        android:layout_margin="@dimen/medium_brush"
        android:layout_below="@+id/relativeLayoutAudioVideoMain"
        android:background="@mipmap/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout

            android:id="@+id/relativeLayoutAudioVideo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">




            <TextView
                android:textStyle="bold"
                android:textColor="@color/black_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_brush"
                android:text="Read About Hanuman Ji"
                android:id="@+id/textViewAboutHanumanJi"
                android:gravity="center"
                android:padding="15dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="@dimen/large_brush"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
                />

            <TextView
                android:padding="@dimen/fifteen_brush"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/large_brush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audio_video_of_hanuman_ji"
                android:id="@+id/textViewAboutHanumanJiDescription"
                android:layout_below="@+id/textViewAboutHanumanJi"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>


    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>