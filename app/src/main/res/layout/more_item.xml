<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="8dp"
        android:background="#f8ebc8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="visible"
            android:layout_margin="@dimen/small_brush"
            android:id="@+id/imageViewLink"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imageViewLink"
            android:id="@+id/lldocs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/small_brush"
                android:id="@+id/textViewLink"
                android:textSize="@dimen/fifteen_brush"
                android:textColor="@color/menutextcolor"
                android:text="https://"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:maxLength="17"
                android:ellipsize="end"
                android:id="@+id/textViewMainLink"
                android:textStyle="bold"
                android:layout_below="@+id/textViewFirstHttp"
                android:textSize="@dimen/fifteen_brush"
                android:textColor="@color/menutextcolor"
                android:layout_toRightOf="@+id/imageViewFirst"
                android:text="www.google.comghgfhfhfhfhfhfhf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/textViewOpen"
            android:textColor="@color/menutextcolor"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="@dimen/medium_brush"
            android:background="@drawable/rounded_bg_open"
            android:text="OPEN"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

